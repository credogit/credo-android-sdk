<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuccessActivity"
    android:background="#000">

    <RelativeLayout
        android:id="@+id/main_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="25dp"
        android:background="@drawable/main_bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lvCard"
            >
            <include layout="@layout/pay_with_layout"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lvCard"
            android:background="@drawable/bg"
            android:elevation="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/logoRL"
                android:layout_marginHorizontal="54dp"
                android:layout_marginVertical="10dp">
                <include layout="@layout/balance_layout"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check"
                android:visibility="visible"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/logoRL"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:visibility="visible"
                    android:id="@id/successTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/check"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/failTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">




                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fail"
                        />

                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/check"
                android:layout_marginVertical="20dp">
                <TextView
                    android:id="@+id/successTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="Payment\nSuccessful"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:fontFamily="@font/pangram"
                    android:textFontWeight="800"
                    android:textSize="35sp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/successTV"
                    android:layout_marginTop="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Redirecting in 5s..."
                        android:textColor="#fff"
                        android:id="@+id/redirectTV"
                        android:textSize="21sp"
                        android:textFontWeight="400"
                        android:fontFamily="@font/pangram_light"
                        android:layout_centerVertical="true"
                        android:textStyle="normal"/>
                    <Button
                        android:id="@+id/redirectBT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:text="skip"
                        android:fontFamily="@font/pangram_light"
                        android:textSize="19sp"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        app:backgroundTint="@null"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:textAllCaps="false"
                        android:onClick="redirect"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/skip_bg"
                        android:layout_toEndOf="@+id/redirectTV"
                        />

                </RelativeLayout>
            </RelativeLayout>


        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_bg"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">
        <include layout="@layout/footer"/>
    </RelativeLayout>

</RelativeLayout>